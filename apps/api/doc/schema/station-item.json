{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://chatterer.io/station-item.json",
  "additionalProperties": false,
  "title": "Station item",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "channels": {
      "type": "array",
      "items": {
        "$ref": "./channel-lite.json"
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "channels",
    "createdAt",
    "updatedAt"
  ]
}
