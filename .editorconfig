root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
block_comment_start = /**
block_comment = *
block_comment_end = */

{*.{.yaml,.yml}}
indent_size = 2

[*.{html,twig,php,xml}]
indent_size = 4

[{.php_cs,bin/console}]
indent_size = 4
